rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /posts/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
      allow write: if request.resource.size < 5 * 1024 * 1024;
    }
    match /reels/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.size < 50 * 1024 * 1024;
    }
    match /stories/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.size < 8 * 1024 * 1024;
    }
    match /profile/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == request.resource.name.split('/')[1];
    }
    match /site/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
